# Example environment variables for Joinery Server deployment
# Copy this file to .env and fill in the actual values
# DO NOT commit the .env file to version control

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080

# Database Configuration  
ConnectionStrings__DefaultConnection=Server=localhost;Database=JoineryServer;Trusted_Connection=true;

# Authentication Configuration
Authentication__GitHub__ClientId=your-github-client-id
Authentication__GitHub__ClientSecret=your-github-client-secret

# JWT Configuration
JWT__Issuer=https://your-domain.com
JWT__Audience=https://your-domain.com
JWT__SecretKey=your-jwt-secret-key-min-256-bits

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft=Warning

# Email Configuration (if applicable)
EmailSettings__SmtpServer=smtp.your-provider.com
EmailSettings__SmtpPort=587
EmailSettings__FromEmail=noreply@your-domain.com
EmailSettings__Username=your-smtp-username
EmailSettings__Password=your-smtp-password

# External Service Configuration
ExternalAPI__BaseUrl=https://api.external-service.com
ExternalAPI__ApiKey=your-external-api-key

# Redis Configuration (if applicable)
Redis__ConnectionString=localhost:6379

# Application Settings
App__MaxFileUploadSize=10485760
App__AllowedOrigins=https://your-frontend-domain.com